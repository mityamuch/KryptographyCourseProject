<Window x:Class="KryptographyKP.Client.AutorizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KryptographyKP.Client"
        mc:Ignorable="d"
        Title="" Height="300" Width="200" Background="AliceBlue"  WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" Icon="/dataencryption_application_dedatos_3363.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите имя пользователя" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource HeaderStyle}"></TextBlock>
        <TextBox Grid.Row="1" FontSize="17" x:Name="textbox" Height="30" Width="150"></TextBox>
        <Button x:Name="button" Grid.Row="2" Height="30" Width="100" Content="Войти" Style="{StaticResource ButtonStyle}" Click="button_ClickAsync"></Button>
    </Grid>
</Window>
